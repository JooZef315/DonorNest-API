generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id             String      @id @default(uuid())
  name           String
  email          String      @unique
  hashedPassword String
  role           String      @default("OFFICIAL")
  isVerfied      Boolean     @default(false)
  officialIdPic  String
  campaaign      Campaaigns?
}

model Campaaigns {
  id              String      @id @default(uuid())
  name            String      @unique
  description     String?
  officialId      String      @unique()
  official        Users       @relation(fields: [officialId], references: [id], onDelete: Cascade)
  amountRequired  Int
  amountRaised    Int         @default(0)
  amountLeft      Int         @default(0)
  purpose         String
  CampaaignStatus String      @default("OPEN")
  donations       Donations[]
}

model Donations {
  id              Int        @id @default(autoincrement())
  amount          Int
  message         String?
  stripePaymentId String     @unique()
  donationStatus  String     @default("PENDING")
  donatedAt       DateTime   @default(now())
  campaaignId     String
  campaaign       Campaaigns @relation(fields: [campaaignId], references: [id])
}
